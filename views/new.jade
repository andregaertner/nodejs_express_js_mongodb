extends layout

block content
  h3= title
  form#form_add_user.form-horizontal(method="post", action="/create")
    span Name
    span &nbsp;
    input#input_name.form-control(type="text", placeholder="name", name="name" )
    br
    span Email
    span &nbsp;
    input#input_email.form-control(type="text", placeholder="email", name="email")
    br
    span Age
    span &nbsp;
    input#input_age.form-control(type="text", placeholder="age", name="age")

    br
    button#submit_student.btn.btn-large.btn-primary(type="submit") submit
