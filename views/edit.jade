extends layout

block content
  h3= title

  form#form_edit_user.form-horizontal(method="post", action="/update/#{user._id}")
    input#input_name.form-control(type="hidden", name="_method" value="put" )
    span Name
    span &nbsp;
    input#input_name.form-control(type="text", placeholder="name", name="name" value="#{user.name}")
    br
    br
    span Email
    span &nbsp;
    input#input_email.form-control(type="text", placeholder="email", name="email" value="#{user.email}")
    br
    br
    span Age
    span &nbsp;
    input#input_age.form-control(type="text", placeholder="age", name="age" value="#{user.age}")
    br
    br
    button#submit_student.btn.btn-large.btn-primary(type="submit") aktualisieren
